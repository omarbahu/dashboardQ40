        function riskClass(occ, sev) {
            const grid = [
                ['BR', 'BR', 'M', 'AR'],
                ['BR', 'M', 'AR', 'AR'],
                ['M', 'AR', 'AR', 'C'],
                ['AR', 'AR', 'C', 'C']
            ];
            return grid[(sev || 1) - 1][(occ || 1) - 1];
        }
