        // ===== Config POC =====
        const FREQ_PER_MONTH = { "Quincenal": 2, "Mensual": 1, "Bimestral": 0.5, "Trimestral": 1 / 3 };
        const FREQ_ORDER = ["Quincenal", "Mensual", "Bimestral", "Trimestral"];
        const COLOR_BY_RISK = { "C": "#f8d7da", "AR": "#fde2c5", "M": "#fff3cd", "BR": "#d1e7dd" };

        // Matriz 4x4: sev (1..4) x occ (1..4)  => BR/M/AR/C
        const RISK_MATRIX = [
            [], // index 0 vacío
            ["", "BR", "BR", "M", "AR"],   // sev=1
            ["", "BR", "BR", "M", "AR"],   // sev=2
            ["", "M", "M", "AR", "C"],     // sev=3
            ["", "AR", "AR", "C", "C"]     // sev=4
        ];

        const FREQ_BY_RISK = { "BR": "Trimestral", "M": "Bimestral", "AR": "Mensual", "C": "Quincenal" };

        function classifyRisk(sev, occ) {
            sev = Math.max(1, Math.min(4, +sev || 1));
            occ = Math.max(1, Math.min(4, +occ || 1));
            return RISK_MATRIX[sev][occ] || "M";
        }

        function modByAvg(risk, avg, useAvg) {
            if (!useAvg) return risk;
            const idx = FREQ_ORDER.indexOf(FREQ_BY_RISK[risk]);
            if (avg <= -0.30) {                      // desempeño negativo -> más exigente
                return FREQ_ORDER[Math.max(0, idx - 1)] ? riskShift(risk, -1) : risk;
            }
            if (avg >= 0.30) {                      // desempeño positivo -> más laxo
                return riskShift(risk, +1);
            }
            return risk;
        }

        function riskShift(risk, step) {
            // Mapea riesgo -> índice de frecuencia y lo recorre (más estricto = hacia Quincenal)
            const curF = FREQ_BY_RISK[risk];
            let i = FREQ_ORDER.indexOf(curF);
            i = Math.max(0, Math.min(FREQ_ORDER.length - 1, i - step)); // -step para coincidir
            const newF = FREQ_ORDER[i];
            // Invertimos el mapa para obtener la etiqueta de riesgo aproximada
            const inv = { "Trimestral": "BR", "Bimestral": "M", "Mensual": "AR", "Quincenal": "C" };
            return inv[newF] || risk;
        }

        function freqOfRisk(risk) { return FREQ_BY_RISK[risk] || "Bimestral"; }

