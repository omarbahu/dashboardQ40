                tbody.innerHTML = "";

                let totalAct = 0, totalSug = 0;

                rows.forEach(item => {
                    const sev = item.sev, occ = item.occ, avg = +(item.avg || 0);
                    const risk = classifyRisk(sev, occ);
                    const riskAdj = modByAvg(risk, avg, useAvg);
                    const freqSug = freqOfRisk(riskAdj);
                    const freqAct = item.current_freq || "Bimestral";
                    const units = +item.units || 1;

                    const act = loadsPerMonth(freqAct, units);
                    const sug = loadsPerMonth(freqSug, units);
                    totalAct += act; totalSug += sug;

                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                <td>${item.criterio}</td>
                <td>${sev}</td>
                <td>${occ}</td>
                <td style="background:${COLOR_BY_RISK[risk] || '#eee'}"><b>${risk}</b></td>
                <td>${avg?.toFixed(2)}</td>
                <td>${freqAct}</td>
                <td><b>${freqSug}</b></td>
                <td>${deltaIcon(freqAct, freqSug)}</td>
                <td>${units}</td>
                <td>${act.toFixed(2)}</td>
                <td>${sug.toFixed(2)}</td>
              `;
                    tbody.appendChild(tr);
                });

                document.getElementById('risk-summary').innerHTML =
                    `<div class="alert alert-secondary p-2 m-0">
                 <b>${country?.name} / ${plant?.name}</b> — Cargas/mes actuales: <b>${totalAct.toFixed(2)}</b>,
                 sugeridas: <b>${totalSug.toFixed(2)}</b> (Δ ${(totalSug - totalAct >= 0 ? '+' : '')}${(totalSug - totalAct).toFixed(2)})
               </div>`;
            }

            function deltaIcon(act, sug) {
                const iAct = FREQ_ORDER.indexOf(act), iSug = FREQ_ORDER.indexOf(sug);
                if (iSug < iAct) return "↑";
                if (iSug > iAct) return "↓";
                return "=";
            }
        }

        function applyRiskOverlay(data, risk) {
            if (!risk?.countries) return;

            const rcIndex = Object.fromEntries((risk.countries || []).map(c => [c.name, c]));
            (data.countries || []).forEach(c => {
                const rc = rcIndex[c.name]; if (!rc) return;
                const rpIndex = Object.fromEntries((rc.plants || []).map(p => [p.name, p]));
                (c.plants || []).forEach(p => {
                    const rp = rpIndex[p.name]; if (!rp?.criteria) return;

                    const byName = Object.fromEntries(rp.criteria.map(x => [String(x.criterio).toLowerCase(), x]));
                    (p.criteria || []).forEach(cr => {
                        const m = byName[String(cr.criterio).toLowerCase()];
                        if (!m) return;
                        if (m.sev != null) cr.sev = m.sev;
                        if (m.occ != null) cr.occ = m.occ;
                        if (m.units != null) cr.units = m.units;
                        if (m.current_freq) cr.current_freq = m.current_freq;
                        if (m.avg != null) cr.avg = m.avg; // si el POC trae promedio calculado
                    });
                });
            });
        }


        // ---------- Init ----------
        document.getElementById('btnGlobal').addEventListener('click', () => { STATE.country = null; STATE.plant = null; renderGlobal(); });
        (async function init() {
            try {
                const [resData, resRisk] = await Promise.all([fetch(JSON_URL), fetch(RISK_URL)]);
                STATE.data = await resData.json();
                STATE.risk = await resRisk.json();

                applyRiskOverlay(STATE.data, STATE.risk); // <-- clave
                renderGlobal();
            } catch (err) {
                console.error('Error cargando JSON:', err);
                alert('No se pudo cargar los JSON. Colócalos en wwwroot/data.');
            }
        })();
    </script>

